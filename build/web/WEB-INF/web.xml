<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            60
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/login.xhtml</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/faces/error/404.xhtml</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/faces/error/500.xhtml</location>
    </error-page>
    <filter>
        <filter-name>AdminRestrictFilter</filter-name>
        <filter-class>com.mohawkcollege.tn.FilterBean</filter-class>
        <init-param>
            <param-name>filtering</param-name>
            <param-value>login.xhtml,accessrestricted.xhtml,404.xhtml,500.xhtml</param-value>
        </init-param>
        <init-param>
            <param-name>defaultpage</param-name>
            <param-value>/WaterBillingFinal/faces/login.xhtml</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AdminRestrictFilter</filter-name>
        <url-pattern>/faces/index.xhtml</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminRestrictFilter</filter-name>
        <url-pattern>/index.xhtml</url-pattern>
    </filter-mapping>
    <resource-ref>
        <description>jdbc:derby://localhost:1527/WaterBilling</description>
        <res-ref-name>WaterBilling</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
